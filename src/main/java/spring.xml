<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="triangle" class="com.spring.learning.Triangle">
        <property name="pointA" ref="pointOrigin" />
        <property name="pointB" ref="pointX20" />
        <property name="pointC" ref="pointY20" />
    </bean>

    <bean id="pointOrigin" class="com.spring.learning.Point">
        <property name="x" value="0" />
        <property name="y" value="0" />
    </bean>

    <bean id="pointX20" class="com.spring.learning.Point">
        <property name="x" value="20" />
        <property name="y" value="0" />
    </bean>

    <bean id="pointY20" class="com.spring.learning.Point">
        <property name="x" value="0" />
        <property name="y" value="20" />
    </bean>
</beans>